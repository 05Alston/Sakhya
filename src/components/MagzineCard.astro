---
interface Props {
    imgSrc: string;
    month: string;
    year: string;
    src: string;
}

const { imgSrc, month, year, src } = Astro.props as Props;
---

<a class="" href={src} target="_blank">
    <img class="w-full" src={imgSrc} alt={`hunkar-${month}-${year}`} />
    <p class="text-center">
        {month}
        <span class="text-col-3">{year}</span>
    </p>
</a>
