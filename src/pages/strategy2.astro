          <div class="w-full h-[4px] bg-col-4"></div>
        </div>

        <!-- img carousal 3 -->
        <div
          class="grid grid-cols-1 justify-center gap-10 items-center pt-[40px] shrink-0"
        >
          <img
            src={HarassmentSession1.src}
            class="h-[300px] w-auto overflow-hidden rounded-xl object-cover"
            alt=""
          />
        </div>
      </div>
    </div>
  </div>
</PageLayout>
